{
  "name": "@soldecoder-monitor/monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "bot",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:biome": "biome lint --write .",
    "lint:biome:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:logs": "pm2 logs ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^20.19.11",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.5.6"
  },
  "dependencies": {
    "@soldecoder-monitor/typescript-config": "*",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2",
    "zod": "^3.23.8"
  }
}
